@model IEnumerable<Iteration_1.Models.MeetingRoom>

@{
    ViewBag.Title = "Index";
}

<center>
    <br />
    <img src="~/Images/PnP MeetUp.png" alt="Sample Image" width="400px" height="170px" />
</center>

<div>
    <h5 class="lead">
        <center>
            <span>Speed Up The Meet Up!</span>
        </center>
    </h5>
</div>

<h2>Dashboard</h2>



    <table class="table">
        @{var counter = 1; }
        <tr>
            @foreach (var item in Model)
            {
                <td>
                    <div class="panel panel-info" style="width:250px;height:250px;">
                        <div class="panel-heading">
                            <h3 class="panel-title">@Html.ActionLink(@Html.DisplayFor(modelItem => item.RoomName).ToString(), "Details", new { id = item.RoomId })</h3>
                        </div>
                        <div class="panel-body">
                            <center>
                                <img src="~/Images/MeetingRoomIcon.jpg" alt="" style="width:230px;height:200px;" class="navbar-brand" />
                            </center>
                        </div>

                    </div>
                </td>
                if (counter % 3 == 0)
                {
                    @:</tr><tr>
                }
                counter++;
            }
        </tr>
    </table>
